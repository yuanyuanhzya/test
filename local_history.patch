+<script>
+    // 轮播图JS逻辑
+    document.addEventListener('DOMContentLoaded', function () {
+        const sliderContent = document.querySelector('.slider-content');
+        const sliderItems = document.querySelectorAll('.slider-item');
+        const prevBtn = document.querySelector('.prev');
+        const nextBtn = document.querySelector('.next');
+        const dots = document.querySelectorAll('.dot');
+        const backToTopBtn = document.getElementById('backToTop');
+
+        let currentIndex = 0;
+        const totalItems = sliderItems.length;
+        let itemWidth = sliderItems[0].offsetWidth;
+        let autoPlayTimer;
+
+        // 初始化轮播图宽度
+        function initSliderWidth() {
+            itemWidth = sliderItems[0].offsetWidth;
+            sliderContent.style.transform = `translateX(-${currentIndex * itemWidth}px)`;
+        }
+
+        // 切换到指定索引
+        function goToIndex(index) {
+            if (index < 0) index = totalItems - 1;
+            if (index >= totalItems) index = 0;
+
+            sliderContent.style.transform = `translateX(-${index * itemWidth}px)`;
+            currentIndex = index;
+
+            // 更新指示器
+            dots.forEach((dot, i) => {
+                dot.classList.toggle('active', i === currentIndex);
+            });
+        }
+
+        // 左右按钮事件
+        prevBtn.addEventListener('click', () => goToIndex(currentIndex - 1));
+        nextBtn.addEventListener('click', () => goToIndex(currentIndex + 1));
+
+        // 指示器点击事件
+        dots.forEach(dot => {
+            dot.addEventListener('click', () => {
+                const index = parseInt(dot.dataset.index);
+                goToIndex(index);
+            });
+        });
+
+        // 自动轮播
+        function startAutoPlay() {
+            autoPlayTimer = setInterval(() => {
+                goToIndex(currentIndex + 1);
+            }, 4000);
+        }
+
+        // 鼠标悬停暂停/恢复
+        const slider = document.querySelector('.slider');
+        slider.addEventListener('mouseenter', () => clearInterval(autoPlayTimer));
+        slider.addEventListener('mouseleave', startAutoPlay);
+
+        // 窗口大小变化时重新计算宽度
+        window.addEventListener('resize', initSliderWidth);
+
+        // 回到顶部功能
+        window.addEventListener('scroll', function() {
+            if (window.pageYOffset > 300) {
+                backToTopBtn.classList.add('show');
+            } else {
+                backToTopBtn.classList.remove('show');
+            }
